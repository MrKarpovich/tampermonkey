{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "rules": {
    "no-return-assign": "error",
    "no-unused-vars": "warn",
    "no-undef": "error",
    "no-console": "off",
    "prefer-const": "warn",
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 4],
    "eqeqeq": "warn",
    "curly": "error",
    "no-var": "warn",
    "spaced-comment": ["warn", "always"],
    "keyword-spacing": ["error", { "before": true, "after": true }]
  }
}
